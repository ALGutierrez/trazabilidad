
@{
    ViewBag.Title = "NuevoEnvase";
}

<h2>Nuevo Envase</h2>
<br />
<form class="form-horizontal" method="post">
    <div class="form-group">
        <label for="nombreEnvase" class="col-sm-2 control-label">Nombre envase:</label>
        <div class="col-sm-10">
            <input name="NombreEnvase" type="text" class="form-control" id="nombreEnvase" placeholder="Ingrese el nombre del envase">
        </div>
    </div>
    <div class="form-group">
        <label for="descripcion" class="col-sm-2 control-label">Descripcion:</label>
        <div class="col-sm-10">
            <input name="Descripcion" type="text" class="form-control" id="descripcion" placeholder="Ingrese una descripcion opcional">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Aceptar</button>
        </div>
    </div>
</form>

