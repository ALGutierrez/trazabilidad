
@{
    ViewBag.Title = "NuevoTipoMateriaP";
}

<h2>Nuevo Tipo de Materia Prima</h2>
<br />
<form class="form-horizontal" method="post">
    <div class="form-group">
        <label for="NombreTMP" class="col-sm-2 control-label">Nombre del Tipo M.P.:</label>
        <div class="col-sm-10">
            <input name="NombreTMateriaP" type="text" class="form-control" id="nombreTMP" placeholder="Ingrese el nombre del tipo">
        </div>
    </div>
    <div class="form-group">
        <label for="descripcion" class="col-sm-2 control-label">Descripcion:</label>
        <div class="col-sm-10">
            <input name="Descripcion" type="text" class="form-control" id="descripcion" placeholder="Ingrese una descripcion">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Aceptar</button>
        </div>
    </div>
</form>

