
@{
    ViewBag.Title = "NuevaMateriaPrima";
}

<h2>Nueva Materia Prima</h2>
<br />
<form class="form-horizontal" method="post">
    <div class="form-group">
        <label for="NombreMP" class="col-sm-2 control-label">Nombre Materia prima:</label>
        <div class="col-sm-10">
            <input name="NombreMP" type="text" class="form-control" id="nombreMP" placeholder="Ingrese el nombre de la materia prima">
        </div>
    </div>
    <div class="form-group">
        <label for="descripcion" class="col-sm-2 control-label">Descripcion general:</label>
        <div class="col-sm-10">
            <input name="DescripcionGral" type="text" class="form-control" id="descripcion" placeholder="Ingrese una descripcion">
        </div>
    </div>
    <div class="form-group">
        <label for="tipoMP" class="col-sm-2 control-label">Tipo de Materia prima:</label>
        <div class="col-sm-10">
            <select class="form-control" id="sel1" name="selectTipos">
                @if (ViewBag.TiposMP != null)
                {
                    foreach (var tipoMP in (List<Sw_Trazabilidad.Models.Tipo_MateriaPrima>)ViewBag.TiposMP)
                    {
                        <option value="@tipoMP.IdTipo_MateriaPrima">@tipoMP.Nombre</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Aceptar</button>
        </div>
    </div>
</form>

